---
const NAV = [
  { label: "Recent", href: "/#recent" },
  { label: "Services", href: "/#services" },
  { label: "Contact", href: "/#contact" },
  { label: "Instagram", href: "https://www.instagram.com/demennis_/", external: true },
]
---

<header class="fixed top-0 z-50 w-full">
  <div class="flex h-16 items-center justify-between px-6">
    <a href="/" class="font-display text-2xl tracking-widest hover:opacity-80 transition-opacity">DEMENNIS</a>

    <nav class="hidden md:flex items-center gap-8 text-sm">
      <a href="/#recent" class="text-white/80 hover:text-white transition-colors">Recent</a>
      <a href="/#services" class="text-white/80 hover:text-white transition-colors">Services</a>
      <a href="/#contact" class="text-white/80 hover:text-white transition-colors">Contact</a>
      <a
        href="https://www.instagram.com/demennis_/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white/80 hover:text-white transition-colors flex items-center"
        aria-label="Instagram"
      >
        <img src="/icons/instagram.png" alt="" class="h-4 w-4 invert opacity-80 hover:opacity-100 transition-opacity" />
      </a>
    </nav>

    <button
      type="button"
      class="md:hidden inline-flex items-center justify-center p-2"
      aria-label="Open menu"
      aria-controls="mobile-menu"
      aria-expanded="false"
      data-menu-button
    >
      <span class="hamburger" aria-hidden="true">
        <span class="hamburger__bar"></span>
        <span class="hamburger__bar"></span>
        <span class="hamburger__bar"></span>
      </span>
    </button>
  </div>

  <div id="mobile-menu" class="mobile-menu hidden" aria-hidden="true" data-menu-overlay>
    <div class="mobile-menu__backdrop" data-menu-backdrop></div>

    <div class="mobile-menu__panel" role="dialog" aria-modal="true" aria-label="Site menu">
      <div class="flex h-16 items-center justify-between px-6">
        <a
          href="/"
          class="font-display text-2xl tracking-widest text-white hover:opacity-80 transition-opacity"
          data-menu-link
        >
          DEMENNIS
        </a>

        <button
          type="button"
          class="inline-flex items-center justify-center p-2"
          aria-label="Close menu"
          data-menu-close
        >
          <span class="hamburger is-open" aria-hidden="true">
            <span class="hamburger__bar"></span>
            <span class="hamburger__bar"></span>
            <span class="hamburger__bar"></span>
          </span>
        </button>
      </div>

      <nav class="mobile-menu__nav px-6">
        <div class="mobile-menu__stack">
          {
            NAV.map(item =>
              item.external ? (
                <a href={item.href} target="_blank" rel="noopener noreferrer" class="mobile-link" data-menu-link>
                  <span class="inline-flex items-center justify-center gap-3">
                    <img src="/icons/instagram.png" alt="" class="h-6 w-6 invert opacity-90" />
                  </span>
                </a>
              ) : (
                <a href={item.href} class="mobile-link" data-menu-link>
                  {item.label}
                </a>
              ),
            )
          }
        </div>
      </nav>
    </div>
  </div>
</header>

<style>
  .hamburger {
    width: 28px;
    height: 20px;
    display: inline-flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .hamburger__bar {
    height: 3px;
    width: 100%;
    background: rgba(255, 255, 255, 0.92);
    border-radius: 999px;
    transform-origin: center;
    transition:
      transform 220ms ease,
      opacity 180ms ease;
  }

  .hamburger.is-open .hamburger__bar:nth-child(1) {
    transform: translateY(8.5px) rotate(45deg);
  }

  .hamburger.is-open .hamburger__bar:nth-child(2) {
    opacity: 0;
  }

  .hamburger.is-open .hamburger__bar:nth-child(3) {
    transform: translateY(-8.5px) rotate(-45deg);
  }

  .mobile-menu {
    position: fixed;
    inset: 0;
    z-index: 60;
  }

  .mobile-menu.hidden {
    display: none;
  }

  .mobile-menu__backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.95);
    opacity: 0;
    transition: opacity 200ms ease;
  }

  .mobile-menu__panel {
    position: relative;
    height: 100%;
    width: 100%;
    transform: translateY(-8px);
    transition: transform 200ms ease;
  }

  .mobile-menu__nav {
    height: calc(100vh - 64px);
    display: grid;
    place-items: center;
    text-align: center;
  }

  .mobile-menu__stack {
    display: flex;
    flex-direction: column;
    gap: 22px;
  }

  .mobile-link {
    color: rgba(255, 255, 255, 0.9);
    transition:
      color 150ms ease,
      transform 200ms ease,
      opacity 200ms ease;
    opacity: 0;
    transform: translateY(6px);
  }

  .mobile-link:hover {
    color: rgba(255, 255, 255, 1);
  }

  .mobile-menu.is-open .mobile-menu__backdrop {
    opacity: 1;
  }

  .mobile-menu.is-open .mobile-menu__panel {
    transform: translateY(0);
  }

  .mobile-menu.is-open .mobile-link {
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-menu.is-open .mobile-link:nth-child(1) {
    transition-delay: 40ms;
  }
  .mobile-menu.is-open .mobile-link:nth-child(2) {
    transition-delay: 80ms;
  }
  .mobile-menu.is-open .mobile-link:nth-child(3) {
    transition-delay: 120ms;
  }
  .mobile-menu.is-open .mobile-link:nth-child(4) {
    transition-delay: 160ms;
  }

  @media (prefers-reduced-motion: reduce) {
    .hamburger__bar,
    .mobile-menu__backdrop,
    .mobile-menu__panel,
    .mobile-link {
      transition: none !important;
    }
  }
</style>

<script is:inline>
  ;(() => {
    const btn = document.querySelector("[data-menu-button]")
    const overlay = document.querySelector("[data-menu-overlay]")
    const backdrop = document.querySelector("[data-menu-backdrop]")
    const closeBtn = document.querySelector("[data-menu-close]")
    const links = overlay ? overlay.querySelectorAll("[data-menu-link]") : null
    const icon = btn ? btn.querySelector(".hamburger") : null

    if (!btn || !overlay) return

    const setOpen = open => {
      overlay.classList.toggle("hidden", !open)
      overlay.classList.toggle("is-open", open)
      overlay.setAttribute("aria-hidden", String(!open))
      btn.setAttribute("aria-expanded", String(open))
      if (icon) icon.classList.toggle("is-open", open)

      document.documentElement.classList.toggle("overflow-hidden", open)
      document.body.classList.toggle("overflow-hidden", open)
    }

    btn.addEventListener("click", () => {
      const open = overlay.classList.contains("hidden")
      setOpen(open)
    })

    if (closeBtn) closeBtn.addEventListener("click", () => setOpen(false))
    if (backdrop) backdrop.addEventListener("click", () => setOpen(false))

    if (links) links.forEach(a => a.addEventListener("click", () => setOpen(false)))

    window.addEventListener("keydown", e => {
      if (e.key === "Escape") setOpen(false)
    })

    window.addEventListener("hashchange", () => setOpen(false))
  })()
</script>
