---
const { items = [] } = Astro.props
---

<section id="works" class="rw">
  <div class="rw-inner">
    <h2 class="rw-title">RECENT WORK</h2>

    <div class="rw-list">
      {
        items.map(w => (
          <a class="rw-item" href={`/works/${w.slug}`} aria-label={`Open ${w.title}`}>
            <div class="rw-left">
              <div class="rw-name">{w.title}</div>
              <div class="rw-tag">{w.tagline}</div>
              <div class="rw-meta">
                <span>{w.category}</span>
                <span>{w.client}</span>
              </div>
            </div>

            <div class="rw-right">
              <div class="rw-media">
                <img class="rw-img" src={w.preview.poster} alt="" loading="lazy" />
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>

  <style>
    .rw {
      padding: 88px 0;
      background: #000;
      font-family: var(--font-bebas, "Bebas Neue", sans-serif);
    }

    .rw-inner {
      max-width: 72rem;
      margin: 0 auto;
      padding: 0 1rem;
    }

    .rw-title {
      margin: 0 0 44px 0;
      font-size: clamp(3.2rem, 8vw, 6.8rem);
      line-height: 0.9;
      letter-spacing: 0.02em;
      color: rgba(255, 255, 255, 0.95);
      font-weight: 400;
      text-transform: uppercase;
    }

    .rw-list {
      display: flex;
      flex-direction: column;
      gap: 44px;
    }

    .rw-item {
      display: grid;
      grid-template-columns: 0.38fr 0.62fr;
      gap: 36px;
      align-items: end;
      text-decoration: none;
      color: inherit;
    }

    .rw-left {
      padding-bottom: 8px;
      max-width: 30ch;
    }

    .rw-name {
      font-size: 1.7rem;
      line-height: 1.05;
      color: rgba(255, 255, 255, 0.92);
      letter-spacing: 0.05em;
      text-transform: uppercase;
    }

    .rw-tag {
      margin-top: 10px;
      max-width: 28ch;
      color: rgba(255, 255, 255, 0.6);
      font-size: 0.95rem;
      line-height: 1.45;
      letter-spacing: 0.02em;
      font-family:
        ui-sans-serif,
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        sans-serif;
      text-transform: none;
    }

    .rw-meta {
      margin-top: 14px;
      display: flex;
      gap: 1.25rem;
      font-size: 1rem;
      letter-spacing: 0.18em;
      color: rgba(255, 255, 255, 0.6);
      text-transform: uppercase;
    }

    .rw-right {
      width: 100%;
    }

    .rw-media {
      position: relative;
      overflow: hidden;
      background: #000;
    }

    .rw-img {
      display: block;
      width: 100%;
      height: auto;
      aspect-ratio: 16 / 9;
      object-fit: cover;
    }

    @media (max-width: 900px) {
      .rw-item {
        grid-template-columns: 1fr;
      }

      .rw-left {
        max-width: none;
      }

      .rw-tag {
        max-width: 60ch;
      }

      .rw-img {
        aspect-ratio: 16 / 9;
      }

      .rw-meta {
        flex-direction: column;
        gap: 0.5rem;
      }
    }
  </style>
</section>
