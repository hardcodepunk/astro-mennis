---
import Layout from "../../layouts/Layout.astro"
import PlyrPreview from "../../components/PlyrPreview.astro"
import RecentWorks from "../../components/RecentWorks.astro"
import { getCategories, getCategoryBySlug, getWorksByCategorySlug } from "../../lib/sanity.queries"

export async function getStaticPaths() {
  const cats = await getCategories()
  return cats.map(c => ({
    params: { slug: c.slug },
  }))
}

const { slug } = Astro.params
const category = await getCategoryBySlug(slug)
if (!category) throw new Error(`Category not found: ${slug}`)

const related = await getWorksByCategorySlug(slug)
---

<Layout>
  <main class="page">
    <div class="page-inner">
      <h1 class="page-title">{category.title}</h1>

      <div class="page-hero">
        <PlyrPreview mp4={category.preview.mp4} webm={category.preview.webm} poster={category.preview.poster} />
      </div>

      <section class="page-overview">
        {category.overviewLead ? <p class="page-lead">{category.overviewLead}</p> : null}
        {category.overviewBody ? <p class="page-body">{category.overviewBody}</p> : null}
      </section>
    </div>
  </main>

  {related.length ? <RecentWorks items={related} /> : null}

  <style>
    .page {
      padding: 28px 0 96px;
      background: #000;
      font-family: var(--font-bebas, "Bebas Neue", sans-serif);
    }

    .page-inner {
      max-width: 72rem;
      margin: 4rem auto 0;
      padding: 0 1rem;
    }

    .page-title {
      margin: 0;
      font-size: clamp(3.4rem, 9vw, 7.2rem);
      line-height: 0.9;
      font-weight: 400;
      letter-spacing: 0.02em;
      text-transform: uppercase;
    }

    .page-hero {
      margin-top: 28px;
    }

    .page-img {
      display: block;
      width: 100%;
      height: auto;
      aspect-ratio: 16 / 9;
      object-fit: cover;
    }

    .page-overview {
      margin-top: 72px;
      max-width: 64rem;
    }

    .page-lead {
      margin: 16px 0 0 0;
      font-size: clamp(1.6rem, 2.4vw, 2.1rem);
      line-height: 1.3;
      max-width: 48ch;
    }

    .page-body {
      margin: 20px 0 0 0;
      font-family:
        ui-sans-serif,
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        sans-serif;
      line-height: 1.75;
      max-width: 70ch;
      font-size: 1rem;
    }

    @media (max-width: 1000px) {
      .page-overview {
        max-width: none;
      }

      .page-body {
        max-width: 65ch;
      }
    }
  </style>
</Layout>
