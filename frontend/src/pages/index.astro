---
import Layout from "../layouts/Layout.astro"
import Videohero from "../components/CinematicHero.astro"
import LogosMarquee from "../components/LogosMarquee.astro"
import BioWithPreview from "../components/BioWithPreview.astro"
import RecentWorks from "../components/RecentWorks.astro"
import CategoriesSection from "../components/CategoriesSection.astro"
import { getRecentWorks, getCategories } from "../lib/sanity.queries"

const recent = await getRecentWorks(2)
const categories = await getCategories()
---

<Layout>
  <Videohero
    title="Mennis"
    subtitle="Director / Editor. Fast, clean, story-first."
    primaryHref="/portfolio"
    primaryLabel="View Portfolio"
    secondaryHref="/contact"
    secondaryLabel="Book a Project"
    minRevealMs={600}
  />

  <LogosMarquee
    items={["Fuck Shit Up", "Waddeuh", "BACKFLIP", "Syeahskate", "Fuck Shit Up", "STUDIO 69"]}
    speed={30}
    height={210}
  />

  <BioWithPreview />

  <RecentWorks items={recent} />

  <CategoriesSection items={categories} />
</Layout>
