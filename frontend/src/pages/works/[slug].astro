---
import Layout from "../../layouts/Layout.astro"
import PlyrPreview from "../../components/PlyrPreview.astro"
import { getWorkBySlug, getWorks, getRecentWorks } from "../../lib/sanity.queries"
import { portableTextToHtml } from "../../lib/portableText"
import RecentWorks from "../../components/RecentWorks.astro"

export async function getStaticPaths() {
  const works = await getWorks()
  return works.map(w => ({ params: { slug: w.slug } }))
}

const { slug } = Astro.params
const work = await getWorkBySlug(slug)
if (!work) throw new Error(`Work not found: ${slug}`)

const recent = await getRecentWorks(2)
const bodyHtml = portableTextToHtml(work.body)
---

<Layout>
  <main class="page">
    <div class="page-inner">
      <h1 class="page-title">{work.title}</h1>

      <div class="page-meta">
        <div class="page-meta-val">{work.year}</div>
        <div class="page-meta-val">{work.category}</div>
        <div class="page-meta-val">{work.client}</div>
      </div>

      <div class="page-hero">
        <PlyrPreview mp4={work.preview.mp4} webm={work.preview.webm} poster={work.preview.poster} />
      </div>

      {bodyHtml ? <section class="page-body-rt" set:html={bodyHtml} /> : null}
    </div>
  </main>

  <RecentWorks items={recent} />

  <style>
    .page {
      padding: 28px 0 96px;
      background: #000;
      font-family: var(--font-bebas, "Bebas Neue", sans-serif);
    }

    .page-inner {
      max-width: 72rem;
      margin: 4rem auto 0;
      padding: 0 1rem;
    }

    .page-title {
      margin: 0;
      font-size: clamp(3.4rem, 9vw, 7.2rem);
      line-height: 0.9;
      font-weight: 400;
      letter-spacing: 0.02em;
      color: rgba(255, 255, 255, 0.96);
      text-transform: uppercase;
    }

    .page-meta {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 28px;
      margin-top: 28px;
      margin-bottom: 44px;
      max-width: 52rem;
    }

    .page-meta-val {
      margin-top: 8px;
      color: rgba(255, 255, 255, 0.6);
      font-size: 1.05rem;
      letter-spacing: 0.08em;
    }

    .page-hero {
      margin-top: 10px;
    }

    .page-overview {
      margin-top: 72px;
      max-width: 64rem;
    }

    .page-lead {
      margin: 16px 0 0 0;
      font-size: clamp(1.6rem, 2.4vw, 2.1rem);
      line-height: 1.3;
      max-width: 48ch;
    }

    .page-body {
      margin: 20px 0 0 0;
      font-family:
        ui-sans-serif,
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        sans-serif;
      line-height: 1.75;
      max-width: 70ch;
      font-size: 1rem;
    }

    @media (max-width: 1000px) {
      .page-overview {
        max-width: none;
      }

      .page-body {
        max-width: 65ch;
      }
    }
  </style>
</Layout>
