---
import Layout from "../../layouts/Layout.astro"
import PlyrPreview from "../../components/PlyrPreview.astro"
import { getWorkBySlug, getWorks, getRecentWorks } from "../../lib/sanity.queries"
import { portableTextToHtml } from "../../lib/portableText"
import RecentWorks from "../../components/RecentWorks.astro"

export async function getStaticPaths() {
  const works = await getWorks()
  return works.map(w => ({ params: { slug: w.slug } }))
}

const { slug } = Astro.params
const work = await getWorkBySlug(slug)
if (!work) throw new Error(`Work not found: ${slug}`)

const recent = await getRecentWorks(2)
const bodyHtml = portableTextToHtml(work.body)
---

<Layout>
  <main class="page">
    <div class="page-inner">
      <h1 class="page-title">{work.title}</h1>

      <div class="page-meta">
        <div class="page-meta-val">{work.year}</div>
        <div class="page-meta-val">{work.category}</div>
        <div class="page-meta-val">{work.client}</div>
      </div>

      <div class="page-hero">
        <PlyrPreview mp4={work.preview.mp4} webm={work.preview.webm} poster={work.preview.poster} />
      </div>

      {
        work.overviewTitle || work.overviewLead ? (
          <section class="page-overview">
            {work.overviewTitle ? <h2 class="page-overview-title">{work.overviewTitle}</h2> : null}

            {work.overviewLead ? <p class="page-lead">{work.overviewLead}</p> : null}
          </section>
        ) : null
      }

      {bodyHtml ? <section class="page-body-rt" set:html={bodyHtml} /> : null}
    </div>
  </main>

  <RecentWorks items={recent} />

  <style>
    .page {
      padding: 28px 0 96px;
      background: #000;
      font-family: var(--font-bebas, "Bebas Neue", sans-serif);
    }

    .page-inner {
      max-width: 72rem;
      margin: 4rem auto 0;
      padding: 0 1rem;
    }

    .page-title {
      margin: 0;
      font-size: clamp(3.4rem, 9vw, 7.2rem);
      line-height: 0.9;
      font-weight: 400;
      letter-spacing: 0.02em;
      color: rgba(255, 255, 255, 0.96);
      text-transform: uppercase;
    }

    .page-meta {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 28px;
      margin-top: 28px;
      margin-bottom: 44px;
      max-width: 52rem;
    }

    .page-meta-val {
      margin-top: 8px;
      color: rgba(255, 255, 255, 0.6);
      font-size: 1.05rem;
      letter-spacing: 0.08em;
    }

    .page-hero {
      margin-top: 10px;
    }

    .page-overview {
      margin-top: 72px;
      max-width: 64rem;
    }

    .page-overview-title {
      margin: 0 0 18px 0;
      font-family: var(--font-bebas, "Bebas Neue", sans-serif);
      font-size: clamp(2rem, 3.2vw, 3rem);
      line-height: 0.95;
      letter-spacing: 0.03em;
      text-transform: uppercase;
      color: rgba(255, 255, 255, 0.95);
    }

    .page-lead {
      margin: 0;
      font-size: clamp(1.6rem, 2.4vw, 2.1rem);
      line-height: 1.3;
      max-width: 48ch;
    }

    .page-body-rt {
      margin-top: 20px;
      max-width: 70ch;
      font-family:
        ui-sans-serif,
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        sans-serif;
      line-height: 1.75;
      font-size: 1rem;
      color: rgba(255, 255, 255, 0.86);
    }

    .page-body-rt > :first-child {
      margin-top: 0;
    }

    .page-body-rt p {
      margin: 20px 0 0 0;
    }

    .page-body-rt h2,
    .page-body-rt h3,
    .page-body-rt h4 {
      font-family: var(--font-bebas, "Bebas Neue", sans-serif);
      text-transform: uppercase;
      letter-spacing: 0.04em;
      color: rgba(255, 255, 255, 0.95);
      margin: 42px 0 0 0;
      line-height: 0.95;
    }

    .page-body-rt h2 {
      font-size: clamp(2rem, 3.4vw, 3.2rem);
    }

    .page-body-rt h3 {
      font-size: clamp(1.5rem, 2.4vw, 2.2rem);
    }

    .page-body-rt h4 {
      font-size: 1.25rem;
    }

    .page-body-rt a {
      color: rgba(255, 255, 255, 0.92);
      text-decoration: underline;
      text-underline-offset: 3px;
      text-decoration-thickness: 1px;
      text-decoration-color: rgba(255, 255, 255, 0.35);
      transition:
        text-decoration-color 160ms ease,
        opacity 160ms ease;
    }

    .page-body-rt a:hover {
      text-decoration-color: rgba(255, 255, 255, 0.75);
      opacity: 1;
    }

    .page-body-rt strong {
      color: rgba(255, 255, 255, 0.95);
      font-weight: 700;
    }

    .page-body-rt em {
      font-style: italic;
      opacity: 0.95;
    }

    .page-body-rt ul,
    .page-body-rt ol {
      margin: 18px 0 0 1.25rem;
      padding: 0;
    }

    .page-body-rt li {
      margin: 10px 0 0 0;
    }

    .page-body-rt blockquote {
      margin: 32px 0 0 0;
      padding: 18px 18px 18px 16px;
      border-left: 2px solid rgba(255, 255, 255, 0.22);
      background: rgba(255, 255, 255, 0.04);
      color: rgba(255, 255, 255, 0.9);
    }

    .page-body-rt blockquote p {
      margin-top: 0;
    }

    .page-body-rt hr {
      border: 0;
      height: 1px;
      background: rgba(255, 255, 255, 0.12);
      margin: 44px 0;
    }

    .page-body-rt figure {
      margin: 32px 0 0 0;
    }

    .page-body-rt img {
      display: block;
      width: 100%;
      height: auto;
      border-radius: 2px;
    }

    .page-body-rt figcaption {
      margin-top: 10px;
      font-size: 0.9rem;
      line-height: 1.45;
      opacity: 0.7;
    }

    .page-body-rt pre {
      margin: 28px 0 0 0;
      padding: 16px 16px;
      overflow: auto;
      border: 1px solid rgba(255, 255, 255, 0.12);
      background: rgba(255, 255, 255, 0.04);
      font-size: 0.92rem;
      line-height: 1.6;
    }

    .page-body-rt code {
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      font-size: 0.95em;
    }

    .page-body-rt pre code {
      font-size: 0.92rem;
    }

    .page-body-rt table {
      width: 100%;
      border-collapse: collapse;
      margin: 28px 0 0 0;
      font-size: 0.98rem;
    }

    .page-body-rt th,
    .page-body-rt td {
      padding: 12px 12px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.12);
      vertical-align: top;
    }

    .page-body-rt th {
      text-align: left;
      color: rgba(255, 255, 255, 0.9);
      letter-spacing: 0.06em;
      text-transform: uppercase;
      font-family: var(--font-bebas, "Bebas Neue", sans-serif);
    }

    @media (max-width: 1000px) {
      .page-overview,
      .page-body-rt {
        max-width: none;
      }
    }
  </style>
</Layout>
